<%= form_tag("/produce/convert", method: "post") do %>
  <input type="submit" name="submit" value="Convert" />
  <select name="type">
    <option value="qq" <% if params[:type] == 'qq' %> selected <% end %>>qq</option>
    <option value="webchat" <% if params[:type] == 'webchat' %> selected <% end %>>webchat</option>
  </select>
  <div class="row">
    <div class="col-md-6">
      <textarea name="chat_text" style="width: 99%; height: 500px;"><%= params[:chat_text] %></textarea>
    </div>


    <div class="col-md-6">
<pre>
<%= @data.to_yaml %>
</pre>
    </div>

  </div>

<% end %>